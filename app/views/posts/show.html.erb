<p class="notice"><%= notice %></p>
 
<p>
  <b>Name:</b>
  <%= @post.user.username %>
</p>
 
<p>
  <b>Title:</b>
  <%= @post.title %>
</p>
 
<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
 
<p>
  <b>Tags:</b>
  <%= join_tags(@post) %>
</p>
 
<h2>Comments</h2>
<%= render :partial => "comments/comment",
           :collection => @post.comments %>
 
<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<% if owner?(@post.user) %>
  <%= link_to 'Edit Post', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back to Posts', posts_path %> 